{
  "compilerOptions": {
    "target": "ES2022",                          // Specify ECMAScript target version (e.g., ES6)
    "module": "ES2022",                     // Module code generation (CommonJS for Node.js)
    "moduleResolution": "node",               // Module resolution strategy (Node.js)
    "outDir": "./dist",                       // Output directory for compiled JavaScript
    "rootDir": "./src",                       // Input directory for TypeScript files
    "esModuleInterop": true,                  // Enable interoperability between CommonJS and ESModules
    "strict": true,                           // Enable strict type-checking options
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true  // Ensure consistent casing in file names
  },
  "include": ["src/**/*"],                   // Include all files in the src folder
  "exclude": ["node_modules"]                // Exclude the node_modules folder
}